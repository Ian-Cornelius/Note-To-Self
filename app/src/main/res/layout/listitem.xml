<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_warning_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:id="@+id/imageViewImportant" />

    <ImageView
        android:id="@+id/imageViewToDo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_check_box_outline_blank_black_24dp"
        android:layout_alignBottom="@+id/txtDescription"
        android:layout_alignStart="@+id/imageViewImportant" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_wb_incandescent_black_24dp"
        android:id="@+id/imageViewIdea"
        android:layout_alignTop="@+id/imageViewImportant"
        android:layout_toEndOf="@+id/imageViewImportant"
        android:layout_marginStart="8dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitle"
        android:layout_toEndOf="@+id/txtDescription"
        android:layout_marginStart="12dp"
        android:layout_alignTop="@+id/imageViewImportant" />

    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/imageViewImportant"
        android:layout_toEndOf="@+id/imageViewImportant"
        android:layout_marginStart="47dp"
        android:layout_marginTop="18dp" />

</RelativeLayout>
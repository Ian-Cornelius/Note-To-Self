<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="match_parent"
    android:padding="10dp"
    android:fitsSystemWindows="false">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:id="@+id/editTitle"
        android:hint="@string/title_hint" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/editTitle"
        android:layout_alignEnd="@+id/editTitle"
        android:layout_marginTop="35dp"
        android:id="@+id/editDescription"
        android:hint="@string/description_hint" />

    <CheckBox
        android:text="@string/idea_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editDescription"
        android:layout_alignStart="@+id/editDescription"
        android:layout_marginTop="35dp"
        android:id="@+id/checkBoxIdea" />

    <CheckBox
        android:text="@string/todo_checkbox"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxTodo"
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/checkBoxIdea"
        android:layout_below="@+id/checkBoxIdea" />

    <Button
        android:text="@string/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCancel"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/checkBoxImportant"
        android:layout_alignEnd="@+id/checkBoxImportant" />

    <Button
        android:text="@string/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:id="@+id/btnOk"
        android:layout_alignBaseline="@+id/btnCancel"
        android:layout_alignBottom="@+id/btnCancel"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:text="@string/important_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxImportant"
        android:layout_below="@+id/checkBoxTodo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:layout_alignStart="@+id/checkBoxTodo" />
</RelativeLayout>